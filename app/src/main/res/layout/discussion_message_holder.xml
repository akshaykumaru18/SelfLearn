<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:background="@drawable/message_bg"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_senderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/message_sender"
        android:text="email"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@android:color/primary_text_dark"
        android:fontFamily="@font/open_sans"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message here"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/open_sans"
        app:layout_constraintTop_toBottomOf="@+id/message_senderId"
        android:textSize="20dp"
         />
    <TextView
        android:id="@+id/message_timestamp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Time"
        app:layout_constraintTop_toBottomOf="@+id/message_content"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="textEnd"
        android:layout_marginRight="20dp"
         />

</androidx.constraintlayout.widget.ConstraintLayout>