<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/course_item_bg"
    android:elevation="10dp"
    android:layout_width="300dp"
    android:layout_height="170dp">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="150dp"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_marginLeft="5dp"-->
<!--        android:layout_marginRight="5dp"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        >-->

    <ImageView
        android:id="@+id/rc_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rc_video_title"
        android:layout_width="200dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/open_sans"
        android:text="Video Title"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toEndOf="@+id/rc_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/rc_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"

        android:background="@drawable/play_icon_2"
        android:contentDescription="TODO"
        app:layout_constraintStart_toEndOf="@+id/rc_image"

        app:layout_constraintTop_toBottomOf="@+id/rc_video_title" />

    <TextView
        android:id="@+id/rc_video_duration"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/open_sans"
        android:text="Duration"

        android:textAlignment="center"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/rc_play"
        app:layout_constraintTop_toBottomOf="@+id/rc_video_title" />

    <TextView
        android:id="@+id/rc_course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:textColor="@android:color/primary_text_dark"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/open_sans"
        android:text="Course Title"
        android:textAlignment="center"
        android:textSize="20dp"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rc_image" />


    <!--    </androidx.cardview.widget.CardView>-->
</androidx.constraintlayout.widget.ConstraintLayout>